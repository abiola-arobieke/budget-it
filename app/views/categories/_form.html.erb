
<div class="container position-fixed">
    <div class="col-md-6 col-sm-12 p-lg-5 w-100 ">
    <div>
        <div class="d-flex">
            <div class="w-100">
            <%= form_with(model: category, class:"d-flex f-column col-gap-3 ") do |form| %>
                <div class="field">
                    <%= form.text_field :name, required: true, class: "w-100 py-1", placeholder: "Category name" %>
                </div>
                <div class="field">
                    <%= form.text_field :icon, required: true, class: "w-100 mt-3 py-1", placeholder: "Icon url" %>
                </div>
                <div class="mt-3">
                    <div class="container-fluid actions bg-green ">
                     <%= form.submit 'Save', class: "w-100 btn btn-md btn-success bg-green mt-3 mb-3" %>
                    </div>
                </div>
            <% end %>
            
            </div>
        </div>
    </div>
</div>


